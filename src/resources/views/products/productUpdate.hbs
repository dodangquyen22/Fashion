<div class="mt-4">
    <h3>Danh sách tất cả sản phẩm</h3>
    <table class="table mt-4">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Tên sản phẩm</th>
                <th scope="col">Giá sản phẩm</th>
                <th scope="col" colspan="2">Phân loại</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <th scope="row">{{increment @index}}</th>
                <td>{{this.name}}</td>
                <td>{{this.price}}</td>
                <td>{{this.category}}</td>
                <td>
                    <a href="/product/{{this._id}}/edit" class="btn btn-link">Sửa</a>
                    <a href="" class="btn btn-link">Xóa</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>