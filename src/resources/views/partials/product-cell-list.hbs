{{#each products}}
  {{#if this.listed }}
  <div class="col-lg-3 col-md-6 col-sm-6 col-md-6 col-sm-6 mix new-arrivals">
    <div class="product__item">
      <div class="product__item__pic set-bg" data-setbg="{{this.image}}">

        <ul class="product__hover">
          <li>
            {{! <a href="#"><img src="/img/icon/heart.png" alt="" /></a> }}
          </li>
          {{! <li>
            <a href="#"><img src="/img/icon/compare.png" alt="" />
              <span>Compare</span></a>
          </li> }}
          <li>
            <a href="product/{{this._id}}"><img
                src="/img/icon/search.png"
                alt=""
              />
              <span>View</span></a>
          </li>
        </ul>
      </div>
      <div class="product__item__text">
        <h6>{{this.name}}</h6>
        <a href="/cart/add/{{this._id}}" class="add-cart">+ Add To Cart</a>
        <!-- <div class="rating">
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                            </div> -->
        <h5>{{formatPrice this.price}}</h5>
      </div>
    </div>
  </div>
  {{/if}}
{{/each}}